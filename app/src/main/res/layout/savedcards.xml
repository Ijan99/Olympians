<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <TextView
        android:id="@+id/cardDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SavedCardDetailsTxt"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="295dp"
        android:layout_height="207dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardDetails"
        app:layout_constraintVertical_bias="0.081"
        app:srcCompat="@drawable/creditcard" />

    <ImageView
        android:id="@+id/ccnumber2"
        android:layout_width="283dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/creditcard" />

    <Button
        android:id="@+id/editbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Editbtn"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/deletebtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Deletebtn"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/editbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Editbtn"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccnumber2"
        app:layout_constraintVertical_bias="0.372" />

    <Button
        android:id="@+id/deletebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Deletebtn"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccnumber2"
        app:layout_constraintVertical_bias="0.372" />

    <TextView
        android:id="@+id/ccnumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX  XXXX  XXXX 1234"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/card2type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX  XXXX  XXXX  5678"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/ccnumber2"
        app:layout_constraintEnd_toEndOf="@+id/ccnumber2"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="@+id/ccnumber2"
        app:layout_constraintTop_toTopOf="@+id/ccnumber2"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/card1type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.808" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ccnumber2"
        app:layout_constraintEnd_toEndOf="@+id/ccnumber2"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="@+id/ccnumber2"
        app:layout_constraintTop_toTopOf="@+id/ccnumber2"
        app:layout_constraintVertical_bias="0.766" />

</androidx.constraintlayout.widget.ConstraintLayout>